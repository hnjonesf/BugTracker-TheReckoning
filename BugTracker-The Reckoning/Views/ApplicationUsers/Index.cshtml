@model PagedList.IPagedList<BugTracker_The_Reckoning.Models.ApplicationUser>
@using PagedList;
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index of Users";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="panel-group col-md-12" id="peoplePanel">
        @if (Model != null)
        {
            <div class="tabletitle">
                <div class="col-md-3">
                    <h4>@Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.NameSortParm })</h4>
                </div>
                <div class="col-md-3">
                    <h4>@Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LastNameSortParm })</h4>
                </div>
                <div class="col-md-3">
                    <h4>@Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParm })</h4>
                </div>
            </div>
            foreach (var item in Model)
            {
                string theHref = "#panel-element-peo" + item.Id;
                string theId = "panel-element-peo" + item.Id;
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#peoplePanel" href=@theHref>
                                <div class="row">
                                    <div class="col-md-3">
                                        @item.FirstName
                                    </div>
                                    <div class="col-md-3">
                                        @item.LastName
                                    </div>
                                    <div class="col-md-3">
                                        @item.Email
                                    </div>
                                </div>
                            </a>

                        </div>

                        <div id=@theId class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="col-md-5">
                                    <h3><u>Projects</u></h3>
                                    @if (item.Projects.Count() != 0)
                                    {
                                        <ul>
                                            @foreach (var proj in item.Projects)
                                            {
                                                <li>
                                                    @Html.ActionLink(proj.Name, "Index", "Projects/Details/" + proj.Id)
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        @item.DisplayName<p> has no assigned projects.</p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <h3><u>Tickets</u></h3>
                                    @if (item.Tickets.Count() != 0)
                                    {
                                        <ul>
                                            @foreach (var tick in item.Tickets)
                                            {
                                                <li>
                                                    @Html.ActionLink(tick.Title, "Index", "Tickets/Details/" + tick.Id)
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p>@item.DisplayName has no assigned tickets.</p>
                                    }
                                </div>
                                <div class="col-md-1 column">
                                    <br />
                                    <div class="btn-group btn-group-vertical">
                                        <div class="row">
                                            <span title="Assign Tickets, Projects and Roles"><em>@Html.ActionLink(" ", "Manage/" + @item.Id, null, new { @class = "btn btn-primary btn-default btn-assign-user glyphicon glyphicon-user" })</em></span>
                                        </div>
                                        <div class="row">
                                            <span title="Delete User"><em>@Html.ActionLink(" ", "Delete/" + @item.Id, null, new { @class = "btn btn-default btn-primary glyphicon glyphicon-trash" })</em></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

        }
    </div>
</div>
<div class="row">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.sortparam }))
</div>
